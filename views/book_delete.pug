extends layout

block content
  h1 #{title}: #{book.title}
  
  if bookinstances.length
    
    p #[string Delete the following book instances before attempting to delete this book]
    
    div(style='margin-left: 20px; margin-top: 20px;')
      
      h4 Book Instances
      
      ul
        each copy in bookinstances
          li
            a(href=copy.url) #{book.title} : #{copy.imprint}
            |   - 
            if copy.status == 'Available'
              span.text-success #{copy.status}
            else if copy.status == 'Maintenance'
              span.text-danger #{copy.status}
            else
              span.text-warning #{copy.status}
            if copy.status != 'Available'
              span (Due: #{copy.due_back_formatted})
            
  else
    p Do you really want to delete this book?
    
    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden' name='bookid' required='true' value=book._id)
          
      button.btn.btn-danger(type='submit') DELETE 

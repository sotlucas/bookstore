extends layout

block content
  if products
    .row
      .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
        ul.list-group
          each product in products
            li.list-group-item
              span.badge #{product.qty}
              span.title #[strong #{product.item.title}] 
              span.label.label-success $#{product.price}
              .btn-group
                button.btn.btn-primary.btn-xs.dropdown-toggle(type='button' data-toggle='dropdown') Action
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#') Reduce by 1
                  li
                    a(href='#') Remove All
    .row
      .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
        span.total #[strong Total: #{totalPrice}]
    hr
    .row
      .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
        a.btn.btn-success(href='/checkout' type='button') Checkout
  else
    .row
      .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
        h2 No items in cart
